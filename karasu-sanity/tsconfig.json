{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "none",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["../apps/web-app/packages/karasu-sanity/**/*.ts", "../apps/web-app/packages/karasu-sanity/**/*.tsx"],
  "exclude": ["../apps/web-app/packages/karasu-sanity/node_modules"]
}
